<link rel="stylesheet" href="{{ 'test-logo-with-text.css' | asset_url }}">

<div class="image-with-text image-text-{{ section.id }}">
  <div class="section-{{ section.id }}-padding">
    <div class="image-with-text__items alignment-{{ section.id }}">
      <div class="logolist-main">
        <div class="logo-list-section__block-icon">
          {{ section.settings['logo-list'] }}
        </div>

        <div class="image-width-text--text ">
          {% if section.settings.heading_text != blank %}
            <div class="section-heading header-{{ section.id }}">
              <strong class="text-main">{{ section.settings.heading_text }}</strong>
            </div>
          {% endif %}
        </div>
      </div>
      {% if section.settings.paragraph_text != blank %}
        <div class=" subtextt paragraph-{{ section.id }}">{{ section.settings.paragraph_text }}</div>
      {% endif %}
      {% if section.settings.button_url and section.settings.button_text %}
        <div class="{{section.settings.button_alignment}} w-100">
          <a class="custom-button btn-{{ section.id }}" href="{{ section.settings.button_url }}">
            {{- section.settings.button_text -}}
          </a>
        </div>
      {% endif %}
    </div>
  </div>
</div>
{% style %}
     .image-text-{{ section.id }} {
       background-color:{{section.settings.background_color}};
     }
     .header-{{ section.id }} {

       font-weight:{{section.settings.heading_font_weight}};
       color:{{section.settings.heading_text_color}};
  }
    .paragraph-{{ section.id }}  {
      color:{{section.settings.paragraph_text_color}};
    }
    .btn-{{ section.id }} {
      background-color:{{section.settings.button_background_color}};
       color:{{section.settings.button_text_color}};
     }

     .btn-{{section.id}}:hover {
       background-color:{{section.settings.button_hover_color}};
     }
     @media only screen and (min-width:950px){
       .alignment-{{ section.id }} {
         flex-direction:{{section.settings.image_position}};
       }
       .header-{{ section.id }} {
         font-size:{{section.settings.heading_font_size}}px;
       }
     }
   .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "icon with text",
  "tag": "section",
  "class": "hompage-section",
  "settings": [
    {
      "type": "header",
      "content": "Image settings"
    },
    {
      "type": "html",
      "id": "logo-list",
      "label": "Image"
    },
    {
      "type": "select",
      "id": "image_position",
      "label": "Image alignment",
      "options": [
        {
          "value": "row",
          "label": "Left"
        },
        {
          "value": "row-reverse",
          "label": "Right"
        }
      ],
      "default": "row"
    },
    {
      "type": "header",
      "content": "Heading Setting"
    },
    {
      "type": "richtext",
      "id": "heading_text",
      "label": "Heading Text"
    },
    {
      "type": "range",
      "id": "heading_font_size",
      "min": 12,
      "max": 100,
      "step": 1,
      "label": "Font size",
      "default": 16
    },
    {
      "type": "range",
      "id": "heading_font_weight",
      "min": 300,
      "max": 800,
      "step": 100,
      "label": "Font weight",
      "default": 400
    },
    {
      "type": "color",
      "id": "heading_text_color",
      "label": "Text color"
    },
    {
      "type": "paragraph",
      "content": "Paragraph Settings"
    },
    {
      "type": "richtext",
      "id": "paragraph_text",
      "label": "Paragraph text"
    },
    {
      "type": "color",
      "id": "paragraph_text_color",
      "label": "Text color"
    },
    {
      "type": "paragraph",
      "content": "Button Settings"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button text",
      "default": "Click Me Away"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "Button url"
    },
    {
      "type": "color",
      "id": "button_background_color",
      "label": "Button background color"
    },
    {
      "type": "color",
      "id": "button_text_color",
      "label": "Button text color"
    },
    {
      "type": "color",
      "id": "button_hover_color",
      "label": "Button hover color"
    },
    {
      "type": "select",
      "id": "button_alignment",
      "label": "Button alignment",
      "options": [
        {
          "value": "text-left",
          "label": "Left"
        },
        {
          "value": "text-center",
          "label": "Center"
        },
        {
          "value": "text-right",
          "label": "Right"
        }
      ],
      "default": "text-left"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color"
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "options": [
        {
          "value": "left",
          "label": "Left"
        },
        {
          "value": "center",
          "label": "Center"
        },
        {
          "value": "right",
          "label": "Right"
        }
      ],
      "default": "left"
    },
    {
      "type": "header",
      "content": "Section padding"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding top",
      "default": 20
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "Padding bottom",
      "default": 20
    }
  ],
  "presets": [
    {
      "name": "Icon with text"
    }
  ]
}
{% endschema %}
